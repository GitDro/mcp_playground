# MCP Arena - Cloud Deployment Environment Variables  
# Copy this file to .env.cloud and customize for your deployment
# FastMCP Cloud Workspace: https://fastmcp.cloud/dro-serve

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port (FastMCP Cloud will override these)
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY & AUTHENTICATION  
# =============================================================================

# Enable authentication (recommended for cloud deployment)
ENABLE_AUTH=true

# Authentication token (will be provided by FastMCP Cloud)
# AUTH_TOKEN=your-bearer-token-here

# CORS settings for web clients
ENABLE_CORS=true
CORS_ORIGINS=*

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable request/response logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# TOOL CONFIGURATION
# =============================================================================

# YouTube tool settings
YOUTUBE_MAX_TOKENS=24000

# Retry system settings
MCP_RETRY_MAX_ATTEMPTS=3
MCP_RETRY_BASE_DELAY=0.5
MCP_RETRY_TYPE_COERCION=true
MCP_RETRY_LOGGING=true

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# Ollama settings (for embeddings - optional in cloud)
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_TIMEOUT=30

# ChromaDB settings (optional for cloud deployment)
# CHROMA_PERSIST_DIRECTORY=/tmp/chroma_db
# CHROMA_COLLECTION_NAME=mcp_documents

# =============================================================================
# CLOUD-SPECIFIC OPTIMIZATIONS
# =============================================================================

# Disable features not needed in cloud
SKIP_LOCAL_OLLAMA_CHECK=true
USE_MEMORY_ONLY_STORAGE=true

# Performance settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Cache settings
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=300

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Set to true for local testing of cloud configuration
CLOUD_DEV_MODE=false

# Enable debug endpoints (disable in production)
ENABLE_DEBUG_ENDPOINTS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific tool categories
ENABLE_WEB_TOOLS=true
ENABLE_ARXIV_TOOLS=true
ENABLE_FINANCIAL_TOOLS=true
ENABLE_YOUTUBE_TOOLS=true
ENABLE_WEATHER_TOOLS=true
ENABLE_MEMORY_TOOLS=true
ENABLE_DOCUMENT_TOOLS=true
ENABLE_CRIME_TOOLS=true
ENABLE_TIDE_TOOLS=true
ENABLE_STATS_TOOLS=true

# =============================================================================
# NOTES
# =============================================================================

# 1. FastMCP Cloud automatically handles:
#    - SSL/TLS termination
#    - Load balancing
#    - Auto-scaling
#    - Health checks
#    - Log aggregation

# 2. Environment variables are injected at runtime
#    Do not include sensitive data in your repository

# 3. For local testing of cloud config:
#    cp .env.cloud.example .env.cloud
#    python -m src.server http 8000

# 4. FastMCP Cloud will provide:
#    - AUTH_TOKEN (if authentication enabled)
#    - HOST and PORT (overridden for cloud)
#    - SSL certificates and domain name